{% macro BrandingForm(branding = {}) %}
<section id="branding" class="cms-section" data-cms="branding-section" hidden>
  <div class="cms-content cms-content--branding">
    <div class="cms-section-heading">
      <div>
        <h2>Marka Ayarları</h2>
        <p class="cms-section-subtitle">
          Logo ve renkleri güncelleyerek sitenin görünümünü tek tıkla özelleştirin.
        </p>
      </div>
      <div class="cms-section-actions">
        <button type="submit" form="cms-branding-form" class="cms-btn cms-btn-primary" data-action="save-branding">
          Kaydet
        </button>
      </div>
    </div>

    <div class="cms-branding-layout">
      <form id="cms-branding-form" class="cms-form cms-branding-form" data-cms="branding-form">
        <div class="form-group">
          <label for="branding-site-name">Site Adı</label>
          <input id="branding-site-name" name="siteName" type="text" value="{{ branding.siteName or 'UHA News' }}" placeholder="Sitede gözükecek isim">
        </div>

        <div class="cms-form__grid cms-form__grid--two">
          <div class="form-group">
            <label for="branding-primary-color">Birincil Renk</label>
            <div class="cms-color-picker">
              <input id="branding-primary-color" name="primaryColor" type="color" value="{{ branding.primaryColor or '#1a365d' }}" data-branding-color="primary">
              <span class="cms-color-value" data-branding-color-value="primary">{{ branding.primaryColor or '#1a365d' }}</span>
            </div>
            <small>Başlıklar ve ana butonlarda kullanılır.</small>
          </div>

          <div class="form-group">
            <label for="branding-secondary-color">İkincil Renk</label>
            <div class="cms-color-picker">
              <input id="branding-secondary-color" name="secondaryColor" type="color" value="{{ branding.secondaryColor or '#2d3748' }}" data-branding-color="secondary">
              <span class="cms-color-value" data-branding-color-value="secondary">{{ branding.secondaryColor or '#2d3748' }}</span>
              <button type="button" class="cms-color-suggestion" data-action="suggest-color" data-suggest-for="secondary" title="Önerilen rengi uygula" hidden>
                <span class="cms-color-suggestion__preview"></span>
                <span class="cms-color-suggestion__icon">✨</span>
              </button>
            </div>
            <small>Arka planlar ve ikincil öğeler için.</small>
          </div>

          <div class="form-group">
            <label for="branding-accent-color">Vurgu Rengi</label>
            <div class="cms-color-picker">
              <input id="branding-accent-color" name="accentColor" type="color" value="{{ branding.accentColor or '#3182ce' }}" data-branding-color="accent">
              <span class="cms-color-value" data-branding-color-value="accent">{{ branding.accentColor or '#3182ce' }}</span>
              <button type="button" class="cms-color-suggestion" data-action="suggest-color" data-suggest-for="accent" title="Önerilen rengi uygula" hidden>
                <span class="cms-color-suggestion__preview"></span>
                <span class="cms-color-suggestion__icon">✨</span>
              </button>
            </div>
            <small>Linkler, bildirimler ve önemli butonlar için.</small>
          </div>

          <div class="form-group">
            <label for="branding-logo-text-color">Logo Metin Rengi</label>
            <div class="cms-color-picker">
              <input id="branding-logo-text-color" name="logoTextColor" type="color" value="{{ branding.logoTextColor or '#3182ce' }}" data-branding-color="logoText">
              <span class="cms-color-value" data-branding-color-value="logoText">{{ branding.logoTextColor or '#3182ce' }}</span>
              <button type="button" class="cms-color-suggestion" data-action="suggest-color" data-suggest-for="logoText" title="Önerilen rengi uygula" hidden>
                <span class="cms-color-suggestion__preview"></span>
                <span class="cms-color-suggestion__icon">✨</span>
              </button>
            </div>
            <small>Logo metni için renk.</small>
          </div>

          <div class="form-group">
            <label for="branding-nav-text-color">İkincil Metin Rengi</label>
            <div class="cms-color-picker">
              <input id="branding-nav-text-color" name="navTextColor" type="color" value="{{ branding.navTextColor or '#ffffff' }}" data-branding-color="navText">
              <span class="cms-color-value" data-branding-color-value="navText">{{ branding.navTextColor or '#ffffff' }}</span>
              <button type="button" class="cms-color-suggestion" data-action="suggest-color" data-suggest-for="navText" title="Önerilen rengi uygula" hidden>
                <span class="cms-color-suggestion__preview"></span>
                <span class="cms-color-suggestion__icon">✨</span>
              </button>
            </div>
            <small>Navigasyon linkleri ve footer başlıkları için.</small>
          </div>

          <div class="form-group">
            <label for="branding-nav-bg-color">Navigasyon Arkaplan Rengi</label>
            <div class="cms-color-picker">
              <input id="branding-nav-bg-color" name="navBackgroundColor" type="color" value="{{ branding.navBackgroundColor or '#1a365d' }}" data-branding-color="navBackground">
              <span class="cms-color-value" data-branding-color-value="navBackground">{{ branding.navBackgroundColor or '#1a365d' }}</span>
              <button type="button" class="cms-color-suggestion" data-action="suggest-color" data-suggest-for="navBackground" title="Önerilen rengi uygula" hidden>
                <span class="cms-color-suggestion__preview"></span>
                <span class="cms-color-suggestion__icon">✨</span>
              </button>
            </div>
            <small>Navigasyon çubuğu arkaplan rengi.</small>
          </div>
        </div>

        <div class="cms-form__grid cms-form__grid--two">
          <div class="form-group">
            <label for="branding-header-logo">Üst Menü Logosu</label>
            <input id="branding-header-logo" type="file" name="headerLogo" accept="image/png, image/jpeg, image/webp, image/svg+xml" data-branding-upload="header">
            <small>Şeffaf arkaplanlı PNG/SVG önerilir. Maksimum 3 MB.</small>
          </div>

          <div class="form-group">
            <label for="branding-footer-logo">Footer Logosu</label>
            <input id="branding-footer-logo" type="file" name="footerLogo" accept="image/png, image/jpeg, image/webp, image/svg+xml" data-branding-upload="footer">
            <small>İsteğe bağlı. Eğer boşsa üst logo kullanılır.</small>
          </div>
        </div>
      </form>

      <div class="cms-branding-preview" data-cms="branding-preview">
        <!-- Top Bar (Primary Color) -->
        <div class="branding-preview__top-bar" data-cms="branding-preview-top-bar" style="background-color: {{ branding.primaryColor or '#1a365d' }};">
          <div class="branding-preview__top-bar-content">
            <span class="branding-preview__date" data-cms="branding-preview-date" style="color: {{ branding.navTextColor or '#ffffff' }};">Pazartesi, 1 Ocak 2024</span>
            <div class="branding-preview__socials">
              <span style="color: rgba(255, 255, 255, 0.8);">f</span>
              <span style="color: rgba(255, 255, 255, 0.8);">t</span>
              <span style="color: rgba(255, 255, 255, 0.8);">i</span>
            </div>
          </div>
        </div>

        <!-- Main Header -->
        <div class="branding-preview__header-main" data-cms="branding-preview-header-main">
          <div class="branding-preview__header-content">
            {% if branding.headerLogo %}
            <img src="{{ branding.headerLogo }}" alt="Logo önizleme" data-cms="branding-preview-header-logo" class="branding-preview__logo-img">
            {% else %}
            <span class="branding-preview__site-name" data-cms="branding-preview-site-name" style="color: {{ branding.logoTextColor or '#3182ce' }};">{{ branding.siteName or 'UHA News' }}</span>
            {% endif %}
          </div>
          <div class="branding-preview__header-border" data-cms="branding-preview-header-border" style="border-bottom-color: {{ branding.accentColor or '#3182ce' }};"></div>
        </div>

        <!-- Navigation Bar (Nav Background Color) -->
        <div class="branding-preview__nav" data-cms="branding-preview-nav" style="background-color: {{ branding.navBackgroundColor or '#1a365d' }};">
          <div class="branding-preview__nav-links">
            <span data-cms="branding-preview-nav-link" style="color: {{ branding.navTextColor or '#ffffff' }};">Gündem</span>
            <span data-cms="branding-preview-nav-link" style="color: {{ branding.navTextColor or '#ffffff' }};">Ekonomi</span>
            <span data-cms="branding-preview-nav-link" style="color: {{ branding.navTextColor or '#ffffff' }};">Spor</span>
            <span data-cms="branding-preview-nav-link" style="color: {{ branding.navTextColor or '#ffffff' }};">Teknoloji</span>
          </div>
        </div>

        <!-- Content Area -->
        <div class="branding-preview__body" data-cms="branding-preview-body">
          <div class="branding-preview__content-section">
            <div class="branding-preview__section-title" style="color: {{ branding.primaryColor or '#1a365d' }};">Son Dakika</div>
            <div class="branding-preview__news-grid">
              <div class="branding-preview__news-card">
                <div class="branding-preview__news-image" style="background: linear-gradient(135deg, {{ branding.accentColor or '#3182ce' }}, {{ branding.primaryColor or '#1a365d' }});"></div>
                <div class="branding-preview__news-content">
                  <div class="branding-preview__news-category" style="background-color: {{ branding.accentColor or '#3182ce' }};">Gündem</div>
                  <div class="branding-preview__news-title">Örnek Haber Başlığı</div>
                </div>
              </div>
              <div class="branding-preview__news-card">
                <div class="branding-preview__news-image" style="background: linear-gradient(135deg, {{ branding.accentColor or '#3182ce' }}, {{ branding.primaryColor or '#1a365d' }});"></div>
                <div class="branding-preview__news-content">
                  <div class="branding-preview__news-category" style="background-color: {{ branding.accentColor or '#3182ce' }};">Ekonomi</div>
                  <div class="branding-preview__news-title">Örnek Haber Başlığı</div>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Footer (Primary Color) -->
        <div class="branding-preview__footer" data-cms="branding-preview-footer" style="background-color: {{ branding.primaryColor or '#1a365d' }};">
          <div class="branding-preview__footer-content">
            <div class="branding-preview__footer-logo-section">
              {% if branding.footerLogo %}
              <img src="{{ branding.footerLogo }}" alt="Footer logo önizleme" data-cms="branding-preview-footer-logo" class="branding-preview__footer-logo-img">
              {% else %}
              <div class="branding-preview__footer-logo-text" data-cms="branding-preview-footer-logo" style="color: {{ branding.accentColor or '#3182ce' }};">
                {{ branding.siteName or 'UHA News' }}
              </div>
              {% endif %}
            </div>
            <div class="branding-preview__footer-links">
              <span style="color: {{ branding.navTextColor or '#ffffff' }};">Kategoriler</span>
              <span style="color: {{ branding.navTextColor or '#ffffff' }};">Kurumsal</span>
              <span style="color: {{ branding.navTextColor or '#ffffff' }};">İletişim</span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
{% endmacro %}

