{% macro LayoutList(layout = []) %}
<section id="layout" class="cms-section" data-cms="layout-section" hidden>
  <div class="cms-section-heading">
    <div>
      <h2 class="cms-section__title">Sayfa Düzeni</h2>
      <p class="cms-section__description">Ana sayfa bileşenlerinin sıralaması ve yapılandırması. Sıralamayı değiştirmek için sürükleyip bırakın.</p>
    </div>
    <button class="cms-btn cms-btn-primary" data-action="save-layout" style="transform: translateY(-5px);">Değişiklikleri Kaydet</button>
  </div>

  <div class="cms-card">
    <div class="cms-table-container">
      <table class="cms-table" data-cms="layout-table">
        <thead>
          <tr>
            <th width="40"></th>
            <th width="50">Sıra</th>
            <th>Bileşen Tipi</th>
            <th>Yapılandırma</th>
            <th>Durum</th>
          </tr>
        </thead>
        <tbody>
          {% if layout and layout.length %}
            {% for widget in layout %}
            <tr data-index="{{ loop.index0 }}">
              <td class="layout-drag-handle" title="Sürükle">
                <span class="drag-icon">⋮⋮</span>
              </td>
              <td class="layout-order">{{ loop.index }}</td>
              <td>
                <span class="cms-badge cms-badge--primary">{{ widget.type }}</span>
              </td>
              <td>
                <div class="widget-config-controls">
                  {% if widget.type == 'carousel' %}
                    <label class="config-control">
                      <input type="checkbox" 
                             data-config="autoplay" 
                             data-widget-index="{{ loop.index0 }}"
                             {% if widget.config.autoplay %}checked{% endif %}>
                      Otomatik oynat
                    </label>
                    <label class="config-control">
                      <span>Süre:</span>
                      <input type="number" 
                             data-config="interval" 
                             data-widget-index="{{ loop.index0 }}"
                             value="{{ (widget.config.interval / 1000) or 5 }}" 
                             min="1" 
                             max="30"
                             class="config-input-small"> saniye
                    </label>
                  
                  {% elif widget.type == 'hero-title' %}
                    <label class="config-control">
                      <span>Başlık:</span>
                      <input type="text" 
                             data-config="title" 
                             data-widget-index="{{ loop.index0 }}"
                             value="{{ widget.config.title or '' }}" 
                             placeholder="Başlık girin"
                             class="config-input">
                    </label>
                  
                  {% elif widget.type == 'featured-news-grid' %}
                    <label class="config-control">
                      <span>Haber sayısı:</span>
                      <input type="number" 
                             data-config="limit" 
                             data-widget-index="{{ loop.index0 }}"
                             value="{{ widget.config.limit or 6 }}" 
                             min="1" 
                             max="20"
                             class="config-input-small">
                    </label>
                  
                  {% elif widget.type == 'category-feed' %}
                    <label class="config-control">
                      <span>Kategori:</span>
                      <select data-config="categorySlug" 
                              data-widget-index="{{ loop.index0 }}"
                              class="config-select">
                        {% for cat in initialState.categories %}
                          <option value="{{ cat.slug }}" 
                                  {% if cat.slug == widget.config.categorySlug %}selected{% endif %}>
                            {{ cat.name }}
                          </option>
                        {% endfor %}
                      </select>
                    </label>
                    <label class="config-control">
                      <span>Haber sayısı:</span>
                      <input type="number" 
                             data-config="limit" 
                             data-widget-index="{{ loop.index0 }}"
                             value="{{ widget.config.limit or 5 }}" 
                             min="1" 
                             max="20"
                             class="config-input-small">
                    </label>
                  
                  {% elif widget.type == 'flash-news' %}
                    <label class="config-control">
                      <span>Haber sayısı:</span>
                      <input type="number" 
                             data-config="limit" 
                             data-widget-index="{{ loop.index0 }}"
                             value="{{ widget.config.limit or 10 }}" 
                             min="1" 
                             max="30"
                             class="config-input-small">
                    </label>
                  
                  {% elif widget.type == 'ad-placeholder' %}
                    <label class="config-control">
                      <span>Boyut:</span>
                      <select data-config="size" 
                              data-widget-index="{{ loop.index0 }}"
                              class="config-select">
                        <option value="standard" {% if widget.config.size == 'standard' %}selected{% endif %}>Standart</option>
                        <option value="large" {% if widget.config.size == 'large' %}selected{% endif %}>Büyük</option>
                        <option value="banner" {% if widget.config.size == 'banner' %}selected{% endif %}>Banner</option>
                      </select>
                    </label>
                  
                  {% else %}
                    <span class="config-text">Özel yapılandırma</span>
                  {% endif %}
                </div>
              </td>
              <td>
                <span class="cms-status">Aktif</span>
              </td>
            </tr>
            {% endfor %}
          {% else %}
            <tr>
              <td colspan="5" class="cms-empty-state">Bileşen bulunamadı.</td>
            </tr>
          {% endif %}
        </tbody>
      </table>
    </div>
  </div>
</section>
{% endmacro %}
