# Server Configuration
# Copy this file to .env and update with your actual values

# Server Port (default: 3000)
PORT=3000

# Site URL - Use IP address format for server deployment
# Example: http://72.61.200.216:3000
# If using a domain name: http://yourdomain.com
SITE_URL=http://72.61.200.216:3000

# Site Name
SITE_NAME=UHA News

# Site Description
SITE_DESCRIPTION=Son dakika haberleri ve güncel gelişmeler

# Base Path (optional)
# Leave empty if serving from root (/)
# Set if behind a reverse proxy (e.g., /news)
BASE_PATH=

# Environment (development or production)
NODE_ENV=production

# Compression (enable/disable)
# Set to 'true' to enable gzip compression
ENABLE_COMPRESSION=true

# Google AdSense Configuration (optional)
ADSENSE_CLIENT_ID=
ADSENSE_SLOT_ID=

